<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="45dp"
        android:src="@drawable/ic_baseline_person"
        app:civ_border_color="@color/red"
        app:civ_border_width="5dp"
        />
    
    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_profile_image"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_baseline_person"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="6dp"
        android:background="@drawable/kenarlik"/>

    <EditText
        android:id="@+id/set_user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_name"
        android:hint="Address"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_baseline_add_location_24"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:padding="6dp"
        android:background="@drawable/kenarlik"/>
    
    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_address"
        android:text="Update"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:backgroundTint="@color/red"
        android:background="@drawable/update_buton"
        android:padding="6dp"
        android:textSize="17sp"/>

</RelativeLayout>